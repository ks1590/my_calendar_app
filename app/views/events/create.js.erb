<% if @status == 'fail' %>
  <%# alert('error!'); %>
  $("#error_explanation").html("<%= j(render 'error', { event: @event }) %>")

<% else %>
  $("#calendar").fullCalendar(
    'renderEvent',
    $.parseJSON("<%=j render(@event, format: :json).html_safe %>"),true
  );
  $("#cards").html("<%= j(render 'card') %>");
  $(".modal").modal("hide");
<% end %>