<% if @status == 'fail' %>
  alert('error!');
<% else %>
  $('#calendar').fullCalendar('removeEvents', [<%= @event.id %>]);
  $('#calendar').fullCalendar(  
    'renderEvent',$.parseJSON("<%=j render(@event, format: :json).html_safe %>"), 
    true
  );
  $("#cards").html("<%= j(render 'card') %>");
  $('.modal').modal('hide');
<% end %>