<div class="l-form">
  <div class = "form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form") do |f| %>
      <h2>Rabbit</h2>
      <div class="form__div">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input" , placeholder: " " %>
        <%= f.label :email, class: "form__label" %>
      </div>

      <div class="form__div">
        <%= f.password_field :password, autocomplete: "current-password", class: "form__input", placeholder: " " %>
        <%= f.label :password, class: "form__label" %><br />
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('.sign_in'), class: "form__button" %>
      </div>
    <% end %>
    <div class="link">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>